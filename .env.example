# Application
NODE_ENV=development
NUXT_PUBLIC_APP_NAME="Fintek Indonesia"
NUXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NUXT_PUBLIC_API_URL=http://localhost:8000/api
NUXT_PUBLIC_API_TIMEOUT=30000

# Authentication
NUXT_PUBLIC_AUTH_COOKIE_NAME=auth_token
NUXT_PUBLIC_REFRESH_COOKIE_NAME=refresh_token
NUXT_PUBLIC_TOKEN_EXPIRY=86400 # 24 hours in seconds

# Google Analytics (optional)
# NUXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Recaptcha (optional)
# NUXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Social Login (optional)
# NUXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
# NUXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
